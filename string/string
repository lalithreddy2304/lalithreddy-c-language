#include <stdio.h>

int main() {
    char str1[100], str2[100];

    printf("Enter first string: ");
    scanf("%[^\n]", str1);
    
    // Clear input buffer
    getchar();

    printf("Enter second string: ");
    scanf("%[^\n]", str2);

    // Concatenate manually (without using strcat)
    int i = 0, j = 0;

    // Move i to the end of str1
    while (str1[i] != '\0') {
        i++;
    }

    // Copy str2 into str1
    while (str2[j] != '\0') {
        str1[i] = str2[j];
        i++;
        j++;
    }

    str1[i] = '\0'; // Null terminate

    printf("After concatenation: %s\n", str1);

    return 0;
}
